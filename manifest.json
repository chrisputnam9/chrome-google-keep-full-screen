{
    "name": "Google Keep - Full Screen Edit",
    "description": "Makes note editing take up the full browser window",
    "version": "1.0.1",
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "permissions": [
        "*://keep.google.com/*"
    ],

    "content_scripts": [
        {
            "matches": ["*://keep.google.com/*", "chrome-extension://hmjkmjkepdijhoojdojkdfohbdgmmhki/*"],
            "css": ["src/styles.css"],
            "js": ["src/script.js"],
            "run_at": "document_end"
        }
    ],

    "manifest_version": 2
}

